{
  "name": "dad-debt-tracker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "frontend": "cd frontend && npm run dev",
    "frontend-build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "server": "npx tsx backend/src/server.ts",
    "server-build": "tsc -p backend/tsconfig.json && tsc-alias -p tsconfig.node.json",
    "server-prod": "npm run build-server && node dist/api/server.js",
    "format": "prettier --write frontend/src/"
  }
}
